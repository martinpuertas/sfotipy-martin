@import "normalize.styl"
@import "fonts.styl"
animacion(parametro)
	-webkit-animation parametro
	-moz-animation parametro
	-o-animation parametro
	-ms-animation parametro
gris-oscuro = #333
gris-claro = #818181
rojo = #ff7a6c
a
	text-decoration none
body
	background #DDD
	font-family "Varela Round", sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black 0.3)
.gray
	color gris-claro
.container
	font-size 0
	padding 1.4rem
	text-align center
.description
	padding .5em
	p
		margin .3em
.border-bottom
	border-bottom 1px solid gris-claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.padding
	padding 1em
.padding-top-bot
	padding 1em 0
.padding-izq-der
	padding 0 .5em
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top 11px
		padding 0 1em
	.min
		left 0
	.max
		right 0
	.total
		height 5px
		background gris-claro
		width auto
		border-radius 5px
		margin 0 2em auto
	.state
		border-radius 5px
		height 5px
		background rojo
		width 30%
		position relative
		animacion(20s state infinite linear)
	.circle
		width 10px
		height 10px
		background gris-oscuro
		border-radius 50%
		position absolute
		right 0
		top -2.5px
@keyframes state
	0%
		width 0
	100%
		width 100%	
.name
	color gris-oscuro
.menu
	display none
.relative
	position relative
.header
	background white
	height 3.5rem
	.title
		font-size 1.1rem
		line-height 3.5rem
		margin 0
		text-align center
	.button-menu
		color gris-oscuro
		left .5em
		position absolute
		top 1.1em
.author
	color gris-claro
.album
	display inline-block
	font-size 1rem
	margin 0 0.5rem
	text-align left
	vertical-align top
	width 8rem
	p
		margin 0.5rem 0
		
.playing
	&.small
		width 100%
		
.image
	img
		width 100%
		
.left
	float left
.right
	float right
.logo
	display none
	padding 1.3em 0
	background white
.round
	border-radius 50%
	overflow hidden
.input
	border 1px solid gris-claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.icon-input
	position absolute
	top .8em
	left .5em
	color gris-claro
.playlist
	display none
@media screen and (min-width:600px)
	.playing
		&.medium
			width 70%
	.image
		img
			width 100%
			height auto

			
@media screen and (min-width:1000px)
	.button-menu
		display none
	.playing
		&.large
			width 1000px
			margin 0 auto
			overflow hidden
	.header
		height auto
		border none
		background transparent
		.title
			display none
	.menu
		background #DDD
		display block
		border-top 1px solid gris-claro
		.list
			overflow hidden
			width 1000px
		.item
			float left
			list-style none
			a
				&:hover
					border-top 5px solid gris-claro
				border-top 5px solid transparent
				color gris-oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				transition .3s border-top
	.logo
		display block
	.wrap
		overflow hidden
		width 1000px
	.img-logo
		width 122px
	.user
		padding 0 1em
	.avatar
		width 38px
		height 38px
	.username
		color gris-claro
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 8px solid gris-claro
			display inline-block
			margin-left .5em
	.music
		float left
		width 500px
		.description
			display none
	.playlist
		display block
		width 400px
		padding 1em 2em
		border-left 1px solid gris-claro
		p
			margin .5em 0
		.list
			list-style none
			font-size 15px
		.item
			padding 0.7em 0
			border-bottom 1px solid gris-claro
		.action
			font-size 14px